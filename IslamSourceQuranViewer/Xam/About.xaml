<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IslamSourceQuranViewer.Xam.About">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TitleStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontFamily" Value="Global User Interface"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollView>
            <StackLayout Orientation="Vertical" Background="White">
                <Label x:Name="DisplayName" HorizontalAlignment="Center" FontSize="42" Style="{StaticResource TitleStyle}"></Label>
                <Label x:Name="Description" HorizontalAlignment="Center" FontSize="28" Style="{StaticResource TitleStyle}" TextWrapping="Wrap"></Label>
                <Label x:Uid="AboutInfo" FontSize="14" Style="{StaticResource TitleStyle}" TextWrapping="Wrap"></Label>
            </StackLayout>
        </ScrollView>
    </Grid>
    <ContentPage.ToolBarItems>
    </ContentPage.ToolBarItems>
</ContentPage>
